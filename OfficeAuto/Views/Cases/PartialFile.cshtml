*@



<form asp-controller="File" asp-action="UploadFile" method="post"
      enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <label class="control-label">Files Upload</label>
        </div>
        <div class="col-md-4">
            <input asp-for="Id" class="form-control" hidden="hidden" readonly />
            <input asp-for="MinuteId" class="form-control" hidden="hidden" readonly />
            @*<input type="file" class="form-control multipleSelect" multiple name="files" />*@
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label">File</label>
                <input type="file" class="form-control multipleSelect" multiple name="files" />

            </div>
        </div>


        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Flag" class="control-label"></label>
                <select asp-for="Flag" asp-items="Html.GetEnumSelectList<Flag>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>


                <span asp-validation-for="Flag" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Access" class="control-label"></label>
                <select asp-for="Access" asp-items="Html.GetEnumSelectList<Access>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>

                <span asp-validation-for="Access" class="text-danger"></span>
            </div>
        </div>
        <br /><br />
    </div>
    <div class="row">
        <div class="col-md-12">
            <label class="control-label"></label>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary btn-icon-text">Upload File</button>
        </div>
    </div>
</form>